<%- include('partials/header.ejs') -%>
<body>
    <form action="/admin/addcourse" method="POST">
        <div>
            <h1>Add Course</h1>
        </div>
        <div>
            <label for="courseCode">Course Code : </label>
            <input type="text" name="courseCode" id="courseCode" required>
        </div>
        <div>
            <label for="courseName">Course Name : </label>
            <input type="text" name="courseName" id="courseName" required>
        </div>
        <div>
            <label for="numberOfCos">No. of COs : </label>
            <select name="numberOfCos" id="numberOfCos" required>
                <option value="5">5</option>
                <option value="6">6</option>
            </select>
        </div>
        <div>
            <label for="dept">Department : </label>
            <select name="dept" id="dept" required>
                <option value="1">Computer Science and Engineering</option>
                <option value="2">Electronics and Communication</option>
                <option value="3">Electrical and Electronics Engineering</option>
                <option value="4">Mechanical Engineering</option>
                <option value="5">Civil Engineering</option>
            </select>
        </div>
        <div>
            <label for="semester">Semester : </label>
            <select name="semester" id="semester" required>
                <option value="1">S1</option>
                <option value="2">S2</option>
                <option value="3">S3</option>
                <option value="4">S4</option>
                <option value="5">S5</option>
                <option value="6">S6</option>
                <option value="7">S7</option>
                <option value="8">S8</option>
            </select>
        </div>
        <div>
            <button type="submit">Add Course</button>
        </div>

    </form>
</body>