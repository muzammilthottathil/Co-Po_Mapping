<%- include('partials/header.ejs') -%>
<body style = "padding : 100px;">
    <div class = "card text-center bg-light " style = "margin:auto;padding-top: 30px;padding-bottom: 80px;font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;max-width: 400px;align-self: center;">
        <div>
            <h5>Faculty Login</h5>
        </div>
        <div>
            <!-- Change begins here -->
            <div>
                <p><%= message %></p>
            </div>
            <!-- Change ends here-->
            <br>
            <form action="/login" method="POST">
                <div class = "form-group">
                    <input type="email" name="email" id="email" required placeholder="Username">
                </div>
                <div class = "form-group" style = "padding-top:10px;">
                    <input type="password" name="password" id="password" required placeholder="Password" >
                </div>
                <div style = "padding-top:20px;">
                    <button class = "btn btn-primary" type="submit" >Login</button>
                </div>
            </form>
        </div>
    </div>
</body>